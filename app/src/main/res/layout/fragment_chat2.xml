<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_blue">

    <ProgressBar
        android:id="@+id/chat2_pb"
        android:layout_width="0dp"
        android:layout_height="10dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:progressDrawable="@drawable/progress_bar"
        android:progress="50"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"/>
    
    <TextView
        android:id="@+id/chat2_question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="질문질문질문질문질문질문\n질문질문질문질문"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/chat2_pb"
        app:layout_constraintTop_toBottomOf="@id/chat2_pb"
        android:layout_marginTop="20dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat2_answer_ll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat2_question_tv"
        app:layout_constraintBottom_toTopOf="@id/chat2_next_btn"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat2_answer1_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/round_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="선택지1"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>
        <ImageView
            android:id="@+id/chat2_check1_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintTop_toTopOf="@id/chat2_answer1_tv"
            app:layout_constraintBottom_toBottomOf="@id/chat2_answer1_tv"
            app:layout_constraintEnd_toEndOf="@id/chat2_answer1_tv"
            android:layout_marginEnd="20dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/chat2_answer2_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat2_answer1_tv"
            android:background="@drawable/round_box"
            android:layout_marginTop="10dp"
            android:text="선택지2"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>
        <ImageView
            android:id="@+id/chat2_check2_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintTop_toTopOf="@id/chat2_answer2_tv"
            app:layout_constraintBottom_toBottomOf="@id/chat2_answer2_tv"
            app:layout_constraintEnd_toEndOf="@id/chat2_answer2_tv"
            android:layout_marginEnd="20dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/chat2_answer3_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat2_answer2_tv"
            android:background="@drawable/round_box"
            android:layout_marginTop="10dp"
            android:text="선택지3"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>
        <ImageView
            android:id="@+id/chat2_check3_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintTop_toTopOf="@id/chat2_answer3_tv"
            app:layout_constraintBottom_toBottomOf="@id/chat2_answer3_tv"
            app:layout_constraintEnd_toEndOf="@id/chat2_answer3_tv"
            android:layout_marginEnd="20dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/chat2_answer4_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat2_answer3_tv"
            android:background="@drawable/round_box"
            android:layout_marginTop="10dp"
            android:text="선택지4"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>
        <ImageView
            android:id="@+id/chat2_check4_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintTop_toTopOf="@id/chat2_answer4_tv"
            app:layout_constraintBottom_toBottomOf="@id/chat2_answer4_tv"
            app:layout_constraintEnd_toEndOf="@id/chat2_answer4_tv"
            android:layout_marginEnd="20dp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/chat2_answer5_tv"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat2_answer4_tv"
            android:background="@drawable/round_box"
            android:layout_marginTop="10dp"
            android:text="선택지5"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:paddingStart="20dp"/>
        <ImageView
            android:id="@+id/chat2_check5_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check"
            app:layout_constraintTop_toTopOf="@id/chat2_answer5_tv"
            app:layout_constraintBottom_toBottomOf="@id/chat2_answer5_tv"
            app:layout_constraintEnd_toEndOf="@id/chat2_answer5_tv"
            android:layout_marginEnd="20dp"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <TextView
        android:id="@+id/chat2_next_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/round_box"
        android:backgroundTint="@color/dark_grey"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:text="다음"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>